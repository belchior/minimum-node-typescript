{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testPathIgnorePatterns": [
    "node_modules"
  ],
  "coverageProvider": "v8",
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "<rootDir>/src/*.ts"
  ],
  "coveragePathIgnorePatterns": [
    "<rootDir>/src/*.spec.ts",
    "<rootDir>/tests/"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  }
}
