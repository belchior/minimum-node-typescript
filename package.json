{
  "name": "minimum-node-typescript",
  "version": "0.1.0",
  "description": "minimum setup to run node + typescript",
  "main": "index.js",
  "keywords": [],
  "author": "Belchior Oliveira",
  "license": "MIT",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "build": "tsc --project tsconfig.prod.json",
    "prebuild:prod": "rm -rf build && npm run build && cp package*.json build",
    "build:prod": "cd build && npm ci --omit=dev --omit=optional",
    "postbuild:prod": "cd build && rm package*.json",
    "lint": "tsc --noEmit && eslint 'src/**/*.ts'",
    "start:dev": "nodemon",
    "test": "jest --watch",
    "test:ci": "jest --coverage --ci"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.35.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.5.0",
    "nodemon": "^2.0.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "optionalDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.6",
    "@types/supertest": "^2.0.12"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "node_modules"
    ],
    "coverageProvider": "v8",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "<rootDir>/src/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/*.spec.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "ts-node ./src/server.ts"
  }
}
