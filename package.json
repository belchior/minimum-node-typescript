{
  "name": "minimum-node-typescript",
  "version": "0.1.0",
  "description": "minimum setup to run node + typescript project",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "lint": "tsc --noEmit && eslint 'src/**/*.{js,ts}'",
    "start": "nodemon -r ts-node/register src/server.ts",
    "test": "jest --watch",
    "test:ci": "jest --coverage --ci"
  },
  "keywords": [],
  "author": "Belchior Oliveira",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "eslint-plugin-jest": "^23.8.2",
    "jest": "^25.2.7",
    "nodemon": "^2.0.2",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  },
  "optionalDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^13.11.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.spec.js"
    ]
  }
}
